<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">
        <ImageView
            android:id="@+id/imv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"></ImageView>
        <TextView
            android:id="@+id/tvAlbumid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="album id:"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/imv"
            app:layout_constraintTop_toTopOf="@id/imv"

            ></TextView>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toRightOf="@+id/imv"
            app:layout_constraintTop_toBottomOf="@+id/tvAlbumid"
            ></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>